/* components/dropdown-select/dropdown-select.wxss */
.dropdown-container {
  position: relative;
  width: 100%;
}

.dropdown-label {
  font-size: 16px;
  font-weight: 500;
  color: #000000;
  margin-bottom: 8px;
  display: block;
}

.required {
  color: #FF3B30;
}

.optional {
  color: #8A8A8A;
  font-size: 14px;
  font-weight: normal;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.dropdown-input {
  width: 100%;
  height: 44px;
  border: 1px solid #E5E5EA;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 16px;
  color: #000000;
  background: #FFFFFF;
  box-sizing: border-box;
  max-width: 100%;
}

.dropdown-list {
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  background: #fff;
  border: 1px solid #dcdfe6;
  border-top: none;
  border-radius: 0 0 8rpx 8rpx;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-in-out;
}

.dropdown-list.show {
  max-height: 300rpx;
}

.dropdown-scroll {
  width: 100%;
}

.dropdown-item {
  padding: 20rpx;
  font-size: 28rpx;
  color: #606266;
  cursor: pointer;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dropdown-item:hover, .dropdown-item.highlight {
  background-color: #f5f7fa;
}

.dropdown-item:active {
  background-color: #e6f7ff;
}
