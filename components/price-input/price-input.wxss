/* components/price-input/price-input.wxss */
/* price-input.wxss */
.price-input-container {
    position: relative;
    margin-bottom: 20px;
}

.price-label {
    font-size: 16px;
    font-weight: 500;
    color: #000000;
    margin-bottom: 8px;
    display: block;
}

.required {
    color: #FF3B30;
    margin-left: 2px;
}

.optional {
    color: #8A8A8A;
    font-size: 14px;
    font-weight: normal;
    margin-left: 4px;
}

.input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
}

.currency-symbol {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    background-color: #f5f5f7;
    display: flex;
    align-items: center;
    justify-content: center;
    border-right: 1px solid #E5E5EA;
    color: #000000;
    font-size: 16px;
    text-align: center;
    overflow: hidden;
}

.price-input {
    width: 100%;
    height: 44px;
    border: 1px solid #E5E5EA;
    border-radius: 8px;
    box-sizing: border-box;
    font-size: 16px;
    color: #000000;
    background: #FFFFFF;
}
