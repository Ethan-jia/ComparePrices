/* 隐藏测试数据按钮样式 */
.test-btn {
  position: fixed;
  right: 18px;
  bottom: 90px;
  z-index: 999;
  background: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 14px;
  padding: 8px 16px;
  border-radius: 20px;
  opacity: 0.7;
  transition: opacity 0.2s;
}

.test-btn:active {
  opacity: 1;
}

.main-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F2F2F7;
  position: relative;
}

/* 商品列表 */
.product-list {
  flex: 1;
  padding-bottom: 86px; /* 只保留底部间距以避免被搜索栏遮挡 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 置顶内容容器 */
.pinned-container {
  padding-top: 12px;
  order: -1;  /* 确保置顶内容在最上方 */
  display: flex;
  flex-direction: column;
}

/* 非置顶内容容器 */
.unpinned-container {
  padding-top: 12px;
  display: flex;
  flex-direction: column-reverse;  /* 非置顶内容从下往上排列 */
  flex: 1;  /* 占据剩余空间 */
}

.product-card-container {
  margin-bottom: 4px;  /* 从12px减小到8px，让卡片之间更紧凑 */
}

/* 搜索栏 */
.search-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  margin: 0;
  border-radius: 0;
  background: #FFFFFF;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  gap: 12px;
  border-top: 1px solid #E5E5EA;
}

.search-box {
  flex: 1;
  position: relative;
  background: #F2F2F7;
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding: 0 12px;
}

.search-input {
  flex: 1;
  height: 40px;
  font-size: 16px;
  color: #000000;
}

.search-icon {
  font-size: 16px;
  color: #8A8A8A;
  margin-right: 8px;
}

.clear-btn {
  font-size: 16px;
  color: #8A8A8A;
  padding: 4px;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 8px 12px;
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 8px;
  font-size: 14px;
}

.filter-icon {
  font-size: 12px;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  bottom: 60px;
  left: 10px;
  right: 10px;
  z-index: 999;
  max-height: 200px;
  overflow-y: auto;
  border-radius: 12px;
  background: #FFFFFF;
  padding: 16px;
  border-bottom: 1px solid #E5E5EA;
  flex-shrink: 0;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.filter-group {
  margin-bottom: 16px;
}

.filter-title {
  font-size: 16px;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8px;
}

.sort-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.sort-option {
  padding: 8px 16px;
  background: #F2F2F7;
  border-radius: 20px;
  font-size: 14px;
  color: #8A8A8A;
  border: 1px solid transparent;
}

.sort-option.active {
  background: #007AFF;
  color: #FFFFFF;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.category-item {
  padding: 8px 16px;
  background: #F2F2F7;
  border-radius: 20px;
  font-size: 14px;
  color: #8A8A8A;
  border: 1px solid transparent;
}

.category-item.active {
  background: #007AFF;
  color: #FFFFFF;
}

/* 商品卡片样式 */
.product-card-container {
  position: relative;
  margin: 1px 16px;
  width: calc(100% - 32px);
  border-radius: 12px;
  background: transparent;
  overflow: hidden;
}

.product-card {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 16px;  /* 从20px减小到16px，让卡片内部更紧凑 */
  display: flex;
  align-items: center;
  gap: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  position: relative;
  width: 100%;
  box-sizing: border-box;
  transform: translateX(0);
  transition: transform 0.3s ease;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.product-card.swiping-left {
  transform: translateX(-120px);
}

.product-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.product-name {
  font-size: 16px;
  font-weight: 600;
  color: #000000;
  margin-bottom: 6px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: flex;
  align-items: center;
}

.pin-icon {
  margin-left: 8rpx;
  font-size: 28rpx;
  line-height: 1;
}

.product-meta {
  display: flex;
  gap: 8px;
  margin-bottom: 4px;
  flex-wrap: wrap;
}

.product-date,
.product-location {
  font-size: 12px;
  color: #8A8A8A;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 80px;
}

.product-category {
  font-size: 12px;
  color: #007AFF;
  background: rgba(0, 122, 255, 0.1);
  padding: 2px 6px;
  border-radius: 10px;
  display: inline-block;
  white-space: nowrap;
}

.product-price {
  text-align: right;
  min-width: 80px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

.current-price {
  font-size: 18px;
  font-weight: 600;
  color: #000000;
  margin-bottom: 4px;
  line-height: 1.2;
}

.original-price {
  font-size: 12px;
  color: #8A8A8A;
  text-decoration: line-through;
  margin-bottom: 2px;
  line-height: 1.2;
}

.discount {
  font-size: 12px;
  color: #34C759;
  font-weight: 500;
  line-height: 1.2;
  background: rgba(52, 199, 89, 0.1);
  padding: 2px 6px;
  border-radius: 10px;
}

/* 左滑操作按钮 */
.action-buttons {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 120px;
  display: flex;
  z-index: 0;
  transform: translateX(120px);
  transition: transform 0.3s ease;
}

.pin-btn,
.delete-btn {
  height: 100%;
  width: 60px;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: 500;
}

.pin-btn {
  background: #007AFF;
}

.delete-btn {
  background: #FF3B30;
}

.product-card.swiping-left ~ .action-buttons {
  transform: translateX(0);
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  bottom: 100px;
  right: 20px;
  width: 56px;
  height: 56px;
  background: #007AFF;
  border-radius: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(0, 122, 255, 0.3);
  z-index: 1000;
}

.fab-icon {
  font-size: 24px;
  color: #FFFFFF;
  font-weight: 300;
}

.fab:active {
  transform: scale(0.95);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
  text-align: center;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 18px;
  color: #8A8A8A;
  margin-bottom: 8px;
}

.empty-hint {
  font-size: 14px;
  color: #C7C7CC;
}