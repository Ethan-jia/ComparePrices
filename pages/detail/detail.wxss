/* 顶部筛选栏样式 */
.filter-bar {
  display: flex;
  align-items: center;
  padding: 12px 16px 0 16px;
  background-color: #F2F2F7; /* 与container背景一致 */
  margin-bottom: 8px;
}

/* 使按钮和picker均匀分布 */
.filter-bar > button,
.filter-bar > picker {
  flex: 1;
  margin: 0 6px;
}

/* 第一个元素左边无间距 */
.filter-bar > button:first-child,
.filter-bar > picker:first-child {
  margin-left: 0;
}

/* 最后一个元素右边无间距 */
.filter-bar > button:last-child,
.filter-bar > picker:last-child {
  margin-right: 0;
}

.filter-btn {
  border: none;
  border-radius: 12px;
  background: #FFFFFF;
  color: #007AFF;
  font-size: 15px;
  font-weight: 500;
  transition: background 0.2s, color 0.2s;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  padding: 6px 0;
  width: 100%; /* 确保按钮填满父容器 */
  box-sizing: border-box;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 与卡片一样的阴影 */
}

.filter-btn.active {
  background: #007AFF;
  color: #fff;
  box-shadow: 0 2px 8px rgba(0,122,255,0.2);
}
.filter-picker {
  margin-left: 8px;
  padding: 6px 16px;
  background: #F2F2F7;
  border-radius: 16px;
  color: #007AFF;
  font-size: 15px;
  min-width: 80px;
  display: inline-block;
}
/* detail.wxss */
.container {
  padding: 16px;
  background-color: #F2F2F7;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 商品信息卡片 */
.product-card {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.product-header {
  margin-bottom: 16px;
}

.product-title {
  font-size: 24px;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8px;
}

.product-category {
  font-size: 14px;
  color: #007AFF;
  background: rgba(0, 122, 255, 0.1);
  padding: 4px 12px;
  border-radius: 12px;
  display: inline-block;
}

.product-info {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.info-row {
  display: flex;
  gap: 16px;
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.info-item.full-width {
  flex: none;
  width: 100%;
}

.info-label {
  font-size: 14px;
  color: #8A8A8A;
}

.info-value {
  font-size: 16px;
  color: #000000;
  font-weight: 500;
}

.currency-symbol {
  font-weight: bold;
  font-size: 18px;
}

/* 价格信息卡片 */

/* 价格信息样式（合并到商品卡片右上角） */
.current-price {
  font-size: 24px;
  font-weight: 600;
  color: #34C759;
  text-align: right;
}
.original-price {
  font-size: 14px;
  color: #8A8A8A;
  text-decoration: line-through;
  text-align: right;
}
.discount-badge {
  background: #34C759;
  color: #FFFFFF;
  padding: 4px 8px;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 500;
  text-align: right;
}

.savings-info {
  padding: 8px 12px;
  background: rgba(52, 199, 89, 0.1);
  border-radius: 8px;
}

.savings-text {
  font-size: 14px;
  color: #34C759;
  font-weight: 500;
}

/* 价格趋势图卡片 */
.chart-card {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.chart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.chart-title {
  font-size: 18px;
  font-weight: 600;
  color: #000000;
}

.chart-subtitle {
  font-size: 14px;
  color: #8A8A8A;
}

.chart-container {
  position: relative;
  height: 120px;
  margin: 20px 0;
}

.chart-line {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
}

.chart-point {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: translateX(-50%);
}

.point-value {
  background: #FFFFFF;
  border: 2px solid #007AFF;
  border-radius: 8px;
  padding: 4px 8px;
  font-size: 12px;
  font-weight: 500;
  color: #007AFF;
  margin-bottom: 4px;
  white-space: nowrap;
}
.chart-point.min .point-value {
  border: 2px solid #34C759;
  color: #34C759;
}

.point-date {
  font-size: 10px;
  color: #8A8A8A;
  white-space: nowrap;
}

.chart-point.current .point-value {
  background: #007AFF;
  color: #FFFFFF;
}
.chart-point.min.current .point-value {
  background: #34C759;
  color: #FFFFFF;
  border: 2px solid #34C759;
}

.chart-connections {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 2px;
  background: #E5E5EA;
  transform: translateY(-50%);
}

.connection-line {
  position: absolute;
  height: 100%;
  background: #007AFF;
  top: 0;
}

/* 价格历史列表卡片 */
.history-card {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.history-header {
  margin-bottom: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-title {
  font-size: 18px;
  font-weight: 600;
  color: #000000;
}

.history-count {
  font-size: 14px;
  color: #8A8A8A;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px;
  background: #F2F2F7;
  border-radius: 8px;
  position: relative;
}

.history-item.current {
  background: rgba(0, 122, 255, 0.1);
  border: 1px solid #007AFF;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.history-date {
  font-size: 14px;
  font-weight: 500;
  color: #000000;
}

.history-location {
  font-size: 12px;
  color: #8A8A8A;
}

.history-price {
  font-size: 16px;
  font-weight: 600;
  color: #000000;
  margin-right: 8px;
}
.history-price.savings-price {
  color: #34C759;
  font-weight: bold;
  font-size: 18px;
}

.current-indicator {
  background: #007AFF;
  color: #FFFFFF;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 500;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 12px;
  margin-top: 32px;
  padding-bottom: 32px;
}

.action-btn {
  flex: 1;
  height: 44px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-edit {
  background: #007AFF;
  color: #FFFFFF;
}

.btn-edit:active {
  background: #0056CC;
}



.btn-delete {
  background: #FF3B30;
  color: #FFFFFF;
}

.btn-delete:active {
  background: #DC3545;
}

/* 单个数据提示卡片 */
.single-data-tip {
  margin: 20px 16px;
  padding: 16px;
  background: #FFFFFF;
  border-radius: 12px;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.tip-icon {
  width: 36px;
  height: 36px;
  background: rgba(0, 122, 255, 0.1);
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  color: #007AFF;
  font-size: 20px;
}

.tip-text {
  flex: 1;
  font-size: 14px;
  color: #5A5A5A;
  line-height: 1.4;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-text {
  font-size: 16px;
  color: #8A8A8A;
}
